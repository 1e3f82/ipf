<!-- HL7 PHMR Rel. 1, Nov 2008 Templates Root: 2.16.840.1.113883.10.20.9 Capitel 3.3.2 Vital Signs Contents -->

<!-- ERRORS -->
<pattern id='p-2.16.840.1.113883.10.20.9.2-errors' see='#p-2.16.840.1.113883.10.20.9.2-errors'>
    <title>PHMR Templates Vital Signs - errors validation phase</title>
    <rule context='*[cda:templateId/@root="2.16.840.1.113883.10.20.9.2"]'>

        <assert test="not(count(descendant::*[cda:templateId/@root='2.16.840.1.113883.10.20.9.8']) = 0 and
                      cda:text and string-length(cda:text/text()) > 0)">
        Error CONF-PHMR-56: If no vital signs are recorded, this section SHALL contain a text element noting this fact.
        </assert>

    </rule>
</pattern>

<!-- WARNINGS -->
<pattern id="p-2.16.840.1.113883.10.20.9.2-warning" see='#p-2.16.840.1.113883.10.20.9.2-warning'>
    <title>PHMR Templates Vital Signs - warning validation phase</title>
    <rule context='*[cda:templateId/@root="2.16.840.1.113883.10.20.9.2"]'>
        
        <assert test="count(descendant::*[cda:templateId/@root='2.16.840.1.113883.10.20.9.8']) >= 1">
        Warning CONF-PHMR-54: One or more Numeric Observations (templateId 2.16.840.1.113883.10.20.9.8) 
        SHOULD be present inside entry elements.
        </assert>
        
    </rule>
</pattern>